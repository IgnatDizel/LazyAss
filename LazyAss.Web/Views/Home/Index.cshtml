@model List<LazyAss.Web.Models.TvSeriesListViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div id="filter"></div>
            <div id="content">
                <div class="row">
                    <div class="col-md-4">
                        <a href="" id="logo"><img src="~/Content/img/@Model.First().ImageUrl" alt=""></a>
                    </div>
                    <div class="col-md-8">
                        <p>@Model.First().Name<p>
                        <p>@Model.First().NameRus<p>
                        <p>Сезонов: @Model.First().SeasonCount<p>
                        <p>Статус: @Model.First().Status<p>
                        <p>Оисание: @Model.First().ShortDescription</p>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div id="advertising"></div>
        </div>
    </div>
</div>


